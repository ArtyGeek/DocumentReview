%div{ :class => 'admin-dashboard-users' }
  %h5 Users by roles
  %table{ :class => 'table table-bordered table-striped table-hover' }
    %thead
      %th Role
      %th Count of users
    - @roles.each do |role|
      %tr
        %td= role.name
        %td= role.users.count
%div{:class => 'admin-dashboard-documents'}
  %h5 Documents by state
  %table{:class => 'table  table-bordered table-striped table-hover'}
    %thead
      %th State
      %th Count
    - @states.each do |state|
      %tr
        %td= state.first
        %td= state.second
